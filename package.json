{
    "name": "nexttax-pro",
    "version": "1.0.0",
    "type": "module",
    "description": "NextTax - ระบบบริหารจัดการภาษีและบัญชีสำหรับธุรกิจ SME",
    "main": "out/main/index.js",
    "author": {
        "name": "NextTax Solutions",
        "email": "support@nexttax.com"
    },
    "copyright": "Copyright © 2026 NextTax Solutions",
    "scripts": {
        "dev": "electron-vite dev",
        "build": "electron-vite build",
        "build:dir": "electron-vite build && electron-builder --dir",
        "build:dist": "electron-vite build && electron-builder --win nsis",
        "preview": "electron-vite preview"
    },
    "keywords": [
        "tax",
        "accounting",
        "thailand",
        "sme",
        "finance"
    ],
    "license": "Proprietary",
    "dependencies": {
        "chart.js": "^4.5.1",
        "sql.js": "^1.10.3"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.16",
        "electron": "^28.1.3",
        "electron-builder": "^24.9.1",
        "electron-vite": "^2.0.0",
        "postcss": "^8.4.33",
        "tailwindcss": "^3.4.1",
        "vite": "^5.0.11"
    },
    "build": {
        "appId": "com.nexttax.pro",
        "productName": "NextTax",
        "executableName": "NextTax",
        "directories": {
            "output": "release"
        },
        "files": [
            "out/**/*",
            "!node_modules"
        ],
        "win": {
            "target": [
                {
                    "target": "portable",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "resources/logo.ico",
            "publisherName": "NextTax Solutions"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "NextTax",
            "installerIcon": "resources/logo.ico",
            "uninstallerIcon": "resources/logo.ico",
            "deleteAppDataOnUninstall": false
        }
    }
}